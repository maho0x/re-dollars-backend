# Server Configuration
NODE_ENV=development
PORT=13022

# Database Credentials
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=bgmchat
DB_PASSWORD=password
DB_DATABASE=bgmchat

# LSKY Image Hosting (Optional)
LSKY_API_URL=http://your-lsky-instance/api/v1/upload
LSKY_TOKEN=Bearer your_token
LSKY_GIF_TOKEN=Bearer your_gif_token

# Remote Image Processor (Optional)
REMOTE_PROCESSOR_URL=http://your-processor/process

# Scraper Configuration
SCRAPE_INTERVAL_MS=5000

# Bangumi API
BGM_ORIGIN=https://bangumi.tv
BANGUMI_API_TOKEN=your_bangumi_access_token
BGM_APP_ID=your_app_id
BGM_APP_SECRET=your_app_secret
BGM_CALLBACK_URL=http://localhost:13022/api/auth/callback
BGM_USER_AGENT=DollarsScraper/2.0
BGM_COOKIE_JSON=[]

# Session Security
SESSION_SECRET=your_super_secret_session_key

# Storage Paths (Optional, defaults to local folders)
# BACKUP_DIR=/path/to/backups
# VIDEOS_PATH=/path/to/videos
